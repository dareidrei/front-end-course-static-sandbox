.absolute-center {
  position absolute
  top 50%
  left 50%
  transform: translate(-50%, -50%)
}

.animation-rotation {
  animation-name rotation
  animation-duration: 3000ms
  animation-iteration-count: infinite
  animation-timing-function linear
}

@keyframes rotation {
    0% {
      transform: translate(-50%, -50%) rotate(0deg)
    }
    100% {
      transform: translate(-50%, -50%) rotate(360deg)
    }
}


body {
  margin: 0;
  box-sizing: border-box;
  font-family: "Didact Gothic", sans-serif;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.text-center {
  text-align: center;
}

.text-title {
  font-family: "Gloria Hallelujah";
}

.text-white {
  color:text-primary;
}

.text-accent {
  color:text-accent;
}

.section {
  height: 100vh;
  padding: 16px;
}

.home {
  padding-top: 50px;
}

.container {
  margin: auto;
  max-width: 800px;
  height: 100%;
}

.card {
  padding: 2rem;
  background: bg-quaternary;
}

.card-narrow {
  width: 200px;
}

.standard-border {
  border: 1px solid border-primary;
}

.shadow,
.btn-primary,
.btn-secondary {
  box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 0.3);
}

.fancy-input {
  background: rgba(0, 0, 0, 0.04);
  border: 1px solid rgba(0, 0, 0, 0);
  outline: none;
  height: 34px;
  width: 100%;
  padding: 8px;
  box-sizing: border-box;
}

.fancy-input:focus {
  background: rgba(0, 0, 0, 0);
  border: 1px solid border-primary;
}

.bg-primary {
  background-color: bg-primary;
}

.bg-secondary {
  background-color: bg-secondary;
}

.bg-tertiary {
  background-color: bg-tertiary;
}

.br-rounded,
.btn-primary,
.btn-secondary,
.fancy-input,
.card {
  border-radius: 8px;
}

.btn-primary,
.btn-secondary {
  cursor: pointer
  border: none
  width: 100px
  height: 36px
  line-height: 36px
  transition: all ease-in-out 300ms
  &:hover {
    box-shadow: 2px 2px 14px 0 rgba(0, 0, 0, 0.3)
  }
}

.btn-primary {
  color: text-primary;
  background: bg-primary;
}

.btn-secondary {
  background:bg-quaternary;
  color: text-secondary;
}

.d-block {
  display: block;
}

.m-t {
  margin-top: 1rem;
}

.m-r {
  margin-right: 1rem;
}

.m-auto {
  margin-left: auto
  margin-right: auto
}

.p-t {
  padding-top: 1rem;
}

.navigation {
  height: 50px;
  background:bg-primary;
  width: 100%;
  position: fixed;
  top: 0;
  padding: 0 10px;
}

.navigation .navigation-item {
  margin: auto;
  text-align: center;
  padding: 15px;
}

.navigation .navigation-item:hover {
  color: hover-color;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  object-fit: cover;
}

.info {
  border-bottom: 1px solid border-primary;
  padding: 8px 0;
}

.info-key {
  color: bg-tertiary;
  margin-right: 5px;
}
